---
export interface Props{
    title: string,
    date: string,
    description?: string
}


const {date, title, description} = Astro.props
---


<div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
        <time class="mb-1 text-sm font-normal leading-none text-fuchsia-50 dark:text-gray-500">{date}</time>
        <h3 class="text-lg font-semibold text-fuchsia-200 dark:text-white mt-2">{title}</h3>
        <p class="mb-4 text-base font-normal text-white-700 dark:text-gray-400 opacity-60 text-pretty">{description}</p>
        
        